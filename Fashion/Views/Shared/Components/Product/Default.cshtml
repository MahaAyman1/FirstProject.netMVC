@model IEnumerable<Product>


<section class="products section-padding">
    <div class="container">
        <div class="row">

            <div class="col-12">
                <h2 class="mb-5">New Arrivals</h2>
            </div>

            

            @foreach(var item in Model)
            {
                <div class="col-lg-4 col-12 mb-3">
                    <div class="product-thumb">
                        <a href="product-detail.html">
                            <img src="@item.ProductImg" class="img-fluid product-image" alt="">
                        </a>

                        <div class="product-top d-flex">
                            <span class="product-alert me-auto">@item.ProductFeature</span>

                            <a href="#" class="bi-heart-fill product-icon"></a>
                        </div>

                        <div class="product-info d-flex">
                            <div>
                                <h5 class="product-title mb-0">
                                    <a href="product-detail.html" class="product-title-link">@item.ProductName</a>
                                </h5>

                                <p class="product-p">@item.ProductDescription</p>
                            </div>

                            <small class="product-price text-muted ms-auto">$@item.ProductPrice</small>
                        </div>
                    </div>
                </div>
                
            }

            <div class="col-12">
                <h2 class="mb-5">Popular</h2>
            </div>
            @foreach(var item in Model)
            {
                @if (item.IspPopular == true)
                {
                    <div class="col-lg-4 col-12 mb-3">
                        <div class="product-thumb">
                            <a href="product-detail.html">
                                <img src="@item.ProductImg" class="img-fluid product-image" alt="">
                            </a>

                            <div class="product-top d-flex">
                                <span class="product-alert me-auto">@item.ProductFeature</span>

                                <a href="#" class="bi-heart-fill product-icon"></a>
                            </div>

                            <div class="product-info d-flex">
                                <div>
                                    <h5 class="product-title mb-0">
                                        <a href="product-detail.html" class="product-title-link">@item.ProductName</a>
                                    </h5>

                                    <p class="product-p">@item.ProductDescription</p>
                                </div>

                                <small class="product-price text-muted ms-auto">$@item.ProductPrice</small>
                            </div>
                        </div>
                    </div>
                }
                
            }

            

           
        </div>
    </div>
</section>