@model Fashion.Models.Slider

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Slider</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="SliderID" />
            <div class="form-group">
                <label asp-for="SliderTitle" class="control-label"></label>
                <input asp-for="SliderTitle" class="form-control" />
                <span asp-validation-for="SliderTitle" class="text-danger"></span>
            </div>
         
            <div class="form-group">
                <label asp-for="SliderText" class="control-label"></label>
                <input asp-for="SliderText" class="form-control" />
                <span asp-validation-for="SliderText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SliderLink" class="control-label"></label>
                <input asp-for="SliderLink" class="form-control" />
                <span asp-validation-for="SliderLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SliderDes" class="control-label"></label>
                <input asp-for="SliderDes" class="form-control" />
                <span asp-validation-for="SliderDes" class="text-danger"></span>
            </div>
            @if (!string.IsNullOrEmpty(Model.SliderImg))
            {
                <div class="form-group">
                    <label>Current Image</label>
                    <div>
                        <img src="@Model.SliderImg" alt="Customer Image" style="max-width: 100px; max-height: 100px;" />
                    </div>
                </div>
            }
            <div class="form-group">
                <label asp-for="formFile" class="control-label">Change image</label>
                <input asp-for="formFile" type="file" class="form-control" />
                <span asp-validation-for="formFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-warning">Back To List </a>
</div>

